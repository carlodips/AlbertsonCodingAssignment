<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="dev.carlodips.albertsoncodingassignment.ui.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_randomUsersListFragment"
            app:destination="@id/randomUsersListFragment" />
    </fragment>

    <fragment
        android:id="@+id/randomUsersListFragment"
        android:name="dev.carlodips.albertsoncodingassignment.ui.random_users.RandomUsersListFragment"
        android:label="RandomUsersListFragment" >
        <argument
            android:name="numberOfUsers"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_randomUsersListFragment_to_randomUserDetailsFragment"
            app:destination="@id/randomUserDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/randomUserDetailsFragment"
        android:name="dev.carlodips.albertsoncodingassignment.ui.details.RandomUserDetailsFragment"
        android:label="RandomUserDetailsFragment" >
        <argument
            android:name="userIndex"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
</navigation>